{
  "SubtitleSettings": {
    "TargetLanguage": "en",
    "SourceLanguage": "auto",
    "FontSize": 24,
    "FontFamily": "Arial",
    "FontColor": "#FFFFFF",
    "BackgroundColor": "#000000",
    "BackgroundOpacity": 0.7,
    "MaxWidth": 800,
    "Position": "Bottom",
    "ShowOriginalText": true,
    "ShowTranslatedText": true
  },
  "SpeechRecognition": {
    "Enabled": true,
    "ConfidenceThreshold": 0.7,
    "GrammarFile": "",
    "UseDictationMode": true
  },
  "Translation": {
    "Provider": "Google",
    "ApiKey": "",
    "ApiEndpoint": "https://translation.googleapis.com/language/translate/v2",
    "CacheEnabled": true,
    "CacheExpirationMinutes": 60
  },
  "Hotkeys": {
    "ToggleOverlay": "Ctrl+Shift+S",
    "ToggleRecognition": "Ctrl+Shift+R",
    "Exit": "Ctrl+Shift+Q"
  },
  "Overlay": {
    "AlwaysOnTop": true,
    "ClickThrough": false,
    "Draggable": true,
    "Resizable": false,
    "StartPosition": {
      "X": 100,
      "Y": 100
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
